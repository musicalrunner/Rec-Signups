extends layout

block content
  script(src='/javascripts/index.js')
  h1= title
  p Welcome to Rec Signups!
  
  #buttons
    span.button#setup Setup
    span.button#assign Assign Recs
    span.button#attendance Get Attendance Sheets
    span.button#cabinList Get Cabin Lists
    span.button#reset Reset Everything
    span.button#test Load Test Campers

  #weekDiv
    form#weekForm
      label(for='week') Week Number:
      select(name='week', id='weekID')
        - for(var i=1; i <= 4; i++)
          option #{i}
    span.button#setWeek Save Week Number
